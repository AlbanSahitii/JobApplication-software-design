<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JobApplication_software_design</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/JobApplication_software_design.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Job Application Software Design</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <!--<li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Index">Users</a>
                        </li>-->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="JobPostings" asp-action="PostedJobs">Posted Jobs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Profile" asp-action="Profile">Profile</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="true">Select Controller</a>
                            <div class="dropdown-menu" data-bs-popper="static">
                                <a class="dropdown-item text-dark" asp-area="" asp-controller="ApplicationReviews" asp-action="Index">Application Reviews</a>

                                <a class="dropdown-item text-dark" asp-area="" asp-controller="ApplicationStatus" asp-action="Index">Application Status</a>
                                <div class="dropdown-divider"></div>

                                <a class="dropdown-item text-dark" asp-area="" asp-controller="CoverLetters" asp-action="Index">Cover Letters</a>

                                <a class="dropdown-item text-dark" asp-area="" asp-controller="Resumes" asp-action="Index">Resumes</a>
                                <div class="dropdown-divider"></div>

                                <a class="dropdown-item text-dark" asp-area="" asp-controller="Interviews" asp-action="Index">Interviews</a>

                                <a class="dropdown-item text-dark" asp-area="" asp-controller="InPersonInterviews" asp-action="Index">In Person Interviews</a>

                                <a class="dropdown-item text-dark" asp-area="" asp-controller="PhoneInterviews" asp-action="Index">Phone Interviews</a>
                                <div class="dropdown-divider"></div>

                                <a class="dropdown-item text-dark" asp-area="" asp-controller="JobApplications" asp-action="Index">Job Applications</a>

                                <a class="dropdown-item text-dark" asp-area="" asp-controller="JobCategories" asp-action="Index">Job Categories</a>

                                <a class="dropdown-item text-dark" asp-area="" asp-controller="JobPostings" asp-action="Index">Job Postings</a>
                                <div class="dropdown-divider"></div>

                                <a class="dropdown-item text-dark" asp-area="" asp-controller="Employers" asp-action="Index">Employers</a>
                            </div>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - JobApplication_software_design - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
