@model IEnumerable<JobApplication_software_design.Models.JobApplication>

@{
    ViewData["Title"] = "Index";
}

<h1>Job Applications</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobPosting)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.SubmissionDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastUpdated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.ResumeId)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.CoverLetterId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobPosting.Id)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.SubmissionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastUpdated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.ResumeId)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.CoverLetterId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
